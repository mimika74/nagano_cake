<div class="container">
 <div class="row ml-4 ">
  <div class="col-12 mt-3">

<h4><p class = "bg-light mt-3 col-8 md-4">会員情報編集</p></h4>

 <%= form_with model: @customer, url: customers_path, local:true do |f| %>

<div class="row">
  <label for="id" class="col-sm-2 col-form-label">
       氏名</label>
    <div class="col-sm-2">
      <%= f.text_field :last_name %>
    </div>
     <div class="p-3"></div>
     <div class="col-sm-2">
      <%= f.text_field :first_name %>
     </div>
 </div>


<div class="row">
  <label for="id" class="col-sm-2 col-form-label">
       フリガナ</label>

    <div class="col-sm-2">
      <%= f.text_field :last_name_kana %>
     </div>
     <div class="p-3"></div>
     <div class="col-sm-2">
       <%= f.text_field :first_name_kana %>
     </div>
     </div>



<div class="row">
  <label for="id" class="col-sm-2 col-form-label">
      <label for ="inputPostalCode">郵便番号</label></label>
       <div class="col-sm-8">
      <%= f.text_field:postal_code, autofocus:true, id:"inputPostalCode",placeholder:"PostalCode"  %>
      </div>
 </div>

<div class="row">
  <label for="id" class="col-sm-2 col-form-label">
       <label for ="inputAddress">住所</label></label>
       <%#= f.text_area:address, autofocus:true, id:"inputAddress",placeholder:"Address"  %>
       <div class="col-sm-10 ">
       <%= f.text_field :address, autofocus:true, id:"inputAddress",placeholder:"Address"  %>
       </div>
</div>

  <div class="row">
  <label for="id" class="col-sm-2 col-form-label">

       <label for ="inputAddress">電話番号</label></label>
       <%#= f.text_area:address, autofocus:true, id:"inputAddress",placeholder:"Address"  %>
       <div class="col-sm-6">
      <%= f.text_field :telephone_number,autofocus:true, id:"inputTelephoneNumber",placeholder:"Telephone_number" %>
      </div>
</div>

</div>

<div class="row mt-5 ml-3">
 <%= f.submit '編集内容を保存', class: 'btn btn-success' %>
 <% end %>
 <div class="col-1"></div>
<%= link_to "退会する", customers_unsubscribe_path, class: 'btn btn-danger' %></div>

</div>