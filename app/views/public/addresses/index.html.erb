配送先登録/一覧


  <%= form_with model: @address, url: addresses_path, local:true do |f| %>

  <h4>郵便番号</h4>
  <%= f.text_field :postal_code %>
  <h4>住所</h4>
  <%= f.text_area :address %>

   <h4>お名前</h4>
  <%= f.text_field :name %>
  <%= f.submit '新規登録' %>
 <% end %>


<p>ご自身の住所(初回登録時の住所）</p>

<% if @customer_address.present? %>
<%= current_customer.postal_code %>
<%= @customer_address %>
<%= current_customer.last_name %><%= current_customer.first_name %>
<% end %>

<p>登録済みのご住所</p>


<% @addresses.each do |address| %>
<div>

  <p>郵便番号：<%= address.postal_code %></p>
  <p>住所：<%= address.address %></p>
  <p>宛名：<%= address.name %></p>
<%= link_to "edit", edit_address_path(address.id) %>
<%= link_to 'Destroy', address_path(address.id), method: :delete %>

</div>

<% end %>






