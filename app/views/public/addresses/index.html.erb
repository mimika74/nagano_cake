<div class="container">
  <div class="row">
   <h5><div class = "bg-light mt-4 col-12 md-6">
    配送先登録/一覧
    </div></h5>
   </div>

<div class="row">
  <div class="col-12 mt-3">

  <%= form_with model: @address, url: addresses_path, local:true do |f| %>
<div class="row">
  <label for= "col-4 text-left">
  郵便番号(ハイフンなし)</label>
  <div class="col-8">
  <%= f.text_field :postal_code %>
  </div>
</div>
   <div class="row">
    <label for="id" class="col-sm-4 col-form-label text-left">
  住所</label>
   <div class="col-8">
    <%= f.text_field :address %>
   </div>
   </div>

   <div class="row">
    <label for="id" class="col-sm-4 col-form-label text-left">
     宛名</label>
       <div class="col-8 p-0">
  <%= f.text_field :name %></div>

      <div class="pl-5">
  <%= f.submit '新規登録', class: 'btn btn-success' %>
 <% end %></div>
 </div>
</div>
 </div>


<p>ご自身の住所(初回登録時の住所）</p>

<% if @customer_address.present? %>
<%= current_customer.postal_code %>
<%= current_customer.address %>
<%= current_customer.last_name %><%= current_customer.first_name %>
<% end %>

<p>登録済みのご住所</p>


<% @customer_address.each do |address| %>
<div>

  <p>郵便番号：<%= address.postal_code %></p>
  <p>住所：<%= address.address %></p>
  <p>宛名：<%= address.name %></p>
<%= link_to "edit", edit_address_path(address.id) %>
<%= link_to 'Destroy', address_path(address.id), method: :delete %>

</div>

<% end %>

</div>





