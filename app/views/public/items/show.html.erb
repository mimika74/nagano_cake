<div class="container mx-auto">

<div class="row">
    <div class="col-md-2 mt-5 m-0 ">
      <%= render 'public/items/list', items: @items %>
    </div>



<div class="col-md-10 mt-3 pl-5">
 <div class="row">
  <div class="col-4 mt-5">
    <%= attachment_image_tag @item, :image, :fill, 250, 250, format: 'jpeg', fallback: "no_image.jpg" %>
  </div>
  <div class="col-5 mt-5">
    <div class="font-weight-bold">
     <h4>
    <p><%= @item.name %></p></h4>
    </div>
    <p><%= @item.introduction %></p>

    <div class="row mt-4 ml-2">

    <strong><h4>￥<%= @item.with_tax_price.to_s(:delimited)  %></h4></strong><div class="mt-1">(税込)</div>

    </div>

    <%= form_with model: @cart_item, url: cart_items_path, method: :POST do |f| %>
    <%= f.hidden_field :item_id, value: @item.id %>

    <div class="row mt-3">
    <%= f.select :amount, *[1..10], { include_blank: '個数選択'}, class: "form-control form-sm col-4 m-2" %>
    <%= f.submit "カートに入れる", class: "btn btn-success btn-sm m-2" %>
    </div>
    <% end %>

  </div>
</div>



 </div>
 </div>
</div>



