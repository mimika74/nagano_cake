
<div class="container">
  <div class="row">
    <div class="col-md-3 mt-5 pl-0">
      <%= render 'public/items/list', items: @items %>

    </div>
  <div class="col-md-9 mt-3 pl-auto">
  <h3>商品一覧</h3>

<% if @search_items %>
  <% @search_items.each do |search_item| %>

  <%= attachment_image_tag search_item, :image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg"  %>
  <p>商品名：<%= search_item.name %></p>
  <p>商品説明：<%= search_item.introduction %></p>
  <p>ジャンル：<%= search_item.genre.name %></p>
  <p>価格: <%= search_item.with_tax_price %>円</p>
  <% end %>

<% else %>

<% if @search_genres %>

  <% @search_genres.each do |search_genre| %>

  <%= attachment_image_tag search_genre, :image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg"  %>
  <p>商品名：<%= search_genre.name %></p>
  <p>商品説明：<%= search_genre.introduction %></p>
  <p>ジャンル：<%= search_genre.genre.name %></p>
  <p>価格: <%= search_genre.with_tax_price %>円</p></div>
  <% end %>

<% else %>

<% @items.each do |item| %>
<div>
  <%= attachment_image_tag item, :image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg"  %>
  <p>商品名：<%= item.name %></p>
  <p>商品説明：<%= item.introduction %></p>
  <p>ジャンル：<%= item.genre.name %></p>
  <p>価格: <%= item.with_tax_price %>円</p>
  <%= link_to "Show", item_path(item.id) %>
  </div>
<% end %>

<% end %>

<% end %>
</div>
</div>
</div>