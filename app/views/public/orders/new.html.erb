<div class="container">
  <div class="row">
   <h5><div class = "bg-light mt-4 col-12 md-6">
     注文情報入力
     </div></h5>
 </div>

<div class="row ml-4 ">
<div class="col-12 mt-3">


<div class="field">
  <h5><p>支払方法</p></h5>
  <%= form_with model: @order, url: orders_confirm_path, local:true do |f| %>
  <div class="radio-inline">
    <%#= f.radio_button :payment_method, 0, checked: "checked" %>
    <%#= f.label :クレジット %>
    <div class="ml-5">
    <%= f.collection_radio_buttons :payment_method, Order.payment_methods_i18n, :first, :last %></div>

  </div>
  <div class="radio-inline">
    <%#= f.radio_button :payment_method, 1 %>
    <%#= f.label :銀行振込 %>
  </div>

<div class="mt-3">
<h5><p>お届け先</p></h5></div>
<div class="mt-3">
<strong>
<p><%= f.radio_button :address_id, "0" %>ご自身の住所</p></strong></div>
 <div class="ml-5">
<% f.label :current_customer %>

<p>〒<%= @customer_address.postal_code %></p>
<p><%= @customer_address.address %></p>
</div>


<div class="mt-3">
<strong>
<p><%= f.radio_button :address_id, "1" %>登録済み住所から選択</p></strong></div>

 <div class="ml-5">
<%= f.select :address_number, options_from_collection_for_select(Address.all, :id, :full_address) %>
</div>

<div class="mt-3">
<strong>
<p><%= f.radio_button :address_id, "2" %>新しいお届け先</p></strong></div>

   <%#= form_with model: @address, url: addresses_path, local:true do |f| %>
<div class="ml-5">
     <div class="field">
    <div class="row">
    <label for="id" class="col-sm-3  text-left">
    郵便番号(ハイフンなし)</label>
     <div class="col-sm-8">
    <%= f.text_field :postal_code %>
     </div>
    </div>
    </div>

     <div class="field">
    <div class="row mt-3">
    <label for="id" class="col-sm-3 col-form-label text-left">
    住所</label>
    <div class="col-sm-6">
    <%= f.text_field :address, class: "form-control border border-dark", autofocus: true %>
      </div>
      </div>
      </div>
     <div class="field">
      <div class="row mt-3">
    <label for="id" class="col-3 text-left">
    お名前</label>
     <div class="col-3">
      <%= f.text_field :name %>
      </div>
      </div>
      </div>
</div>


    <%= f.submit '確認画面へ進む', class: "btn btn-primary" %>

   <% end %>


</div>
</div>
</div>