

<div class="container">
  <p>
<h4>
 <div class ="row">
   <div class = "bg-light">
 注文情報確認
   </div>
 </div>
 </h4>
 </p>


<center>
<div class="card" style="width: 60rem;">

     <ul class="list-group list-group-flush">
     <table>
      <thead>
        <th>商品名</th>
        <th>単価(税込)</th>
        <th>数量</th>
        <th>小計</th>

      </thead>
     </ul>

</div>
    <tbody>
    <%= form_with model: @order_detail, url: orders_confirm_path, local:true do |f| %>
      <% @total = 0 %>
      <% @cart_items.each do |cart_item| %>
        <tr>
          <td><%= cart_item.item.name %></td>
          <td><%= cart_item.item.with_tax_price %></td>
          <td><%= cart_item.amount %></td>
          <td>
              <%= cart_item.subtotal %>
              <% @total += cart_item.subtotal %>
          </td>

        </tr>
      <% end %>
    <% end %>
    </tbody>
</table>

</center>


<%= form_with model: @order, url: orders_path, local:true do |f| %>
<p align ="right">送料:<%= @order.shipping_cost %></p>
<p align ="right">
合計金額:<%= @total %></p>
<p align ="right">請求金額:<%= @total += @order.shipping_cost %></p>

  </div>
</div>
<p>支払方法<%= @order.payment_method_i18n %></p>

<p>お届け先　〒<%= @order.postal_code %>
       <%= @order.address %> </p>
     <p> <%= @order.name %> </p>


  <%= f.hidden_field :payment_method, value: @order.payment_method %>
  <%= f.hidden_field :postal_code, value: @order.postal_code %>
  <%= f.hidden_field :address, value: @order.address %>
  <%= f.hidden_field :name, value: @order.name %>
  <%= f.hidden_field :shipping_cost, value: @order.shipping_cost %>
  <%= f.hidden_field :total_payment, value: @total %>
  <%= f.hidden_field :status, value: @order.status %>
  <%= f.hidden_field :customer_id, value: @order.customer_id %>


  <%#= f.hidden_field :making_status, value: @order.making_status %>
  <%#= f.hidden_field :amount, value: @cart_items.amount %>
  <%#= f.hidden_field :price, value: @total %>

  <%= f.submit '注文を確定する' %>


<% end %>

