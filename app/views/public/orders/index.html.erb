

<div class="container">

 <div class="row">
   <h5><div class = "bg-light mt-4 col-12 md-10">
   注文履歴一覧</div></h5>
  </div>


<center>
   <table class="table col-md-12">
     <thead  class="thead-light" >
        <th>注文日</th>
        <th>配送先</th>
        <th>注文商品</th>
        <th>支払金額</th>
        <th>ステータス</th>
        <th>注文詳細</th>
      </thead>
    <tbody>
    <% @orders.each do |order| %>
        <tr>
          <td><%= order.created_at.strftime('%Y/%m/%d') %></td>
          <td><%= order.postal_code %><p> <%= order.address %></p> <p><%= order.name %>様</p></td>
           <td><% order.order_details.each do |order_detail| %>
             <p><%= order_detail.item.name %> </p>
           <% end %>

           </td>
          <td><%= order.total_payment %></td>
          <td><%= order.status_i18n %></td>
          <td><%= link_to "表示する", order_path(order.id), class: "btn btn-primary" %> </td>
        </tr>
    <% end %>
    </tbody>
    </table>
</div>

