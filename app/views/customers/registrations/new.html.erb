<div class="container">
  <div class="row">
   <h5><div class = "bg-light mt-4 col-12 md-6">
     新規会員登録
     </div></h5>
 </div>

<div class="container">
  <div class="row">
<div class="col-12 mt-3 ">
<%= form_with model: resource, url: registration_path(resource_name), local:true do |f| %>
  <%= render "customers/shared/error_messages", resource: resource %>


    <div class="field">
    <div class="row">
    <label for="id" class="col-2 col-form-label text-left">
    <%= f.label :名前 %></label>
     <div class="col-4">
    (姓)<%= f.text_field :first_name, autofocus: true %>
    <div class="col-4">
    (名)<%= f.text_field :last_name, autofocus: true %>
    </div>
    </div>
    </div>
    </div>

   <div class="field">
    <div class="row">
    <label for="id" class="col-sm-4 col-form-label text-right">

    <%= f.label :フリガナ %></label>
    <div class="col-sm-8">
    (セイ)<%= f.text_field :first_name_kana, autofocus: true %>
    (メイ)<%= f.text_field :last_name_kana, autofocus: true %>
    </div>
  </div>
  </div>

    <div class="field">
    <div class="row">
    <label for="id" class="col-sm-4 col-form-label text-right">

    <%= f.label :メールアドレス %></label>
     <div class="col-sm-8">
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
    </div>
    </div>
    </div>


     <div class="field">
    <div class="row">
    <label for="id" class="col-sm-4 col-form-label text-right">
    <%= f.label :電話番号 %></label>
    <div class="col-sm-8">
    <%= f.text_field :telephone_number, autofocus: true %>
    </div>
    </div>
    </div>


     <div class="field">
    <div class="row">
    <label for="id" class="col-sm-4 col-form-label text-right">
    <%= f.label :郵便番号（ハイフンなし） %></label>
     <div class="col-sm-8">
    <%= f.text_field :postal_code, autofocus: true %>
    </div>
    </div>
    </div>

    <div class="field">
    <div class="row">
    <label for="id" class="col-sm-4 col-form-label text-right">
    <%= f.label :住所 %></label>
     <div class="col-sm-8">
    <%= f.text_field :address, autofocus: true %>
    </div>
    </div>
    </div>


    <div class="field">
    <div class="row">
    <label for="id" class="col-sm-4 col-form-label text-right">
    <%= f.label :パスワード（６文字以上） %></label>
    <div class="col-sm-8">
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %>
    <%= f.password_field :password, autocomplete: "new-password" %>
    </div>
    </div>
    </div>

    <div class="field">
    <div class="row">
    <label for="id" class="col-sm-4 col-form-label text-right">
    <%= f.label :パスワード（確認用） %></label>
     <div class="col-sm-8">
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
    </div>
    </div>
    </div>

  <div class="actions">
    <div class="field">
    <div class="row">
    <label for="id" class="col-sm-4 col-form-label text-right"></label>
      <div class="col-sm-8">
    <%= f.submit "新規登録", class:"btn btn-success" %>
    </div>
    </div>
    </div>
<% end %>
<div class="row">
 <div class = "bg-light mt-4 col-2 md-3">
     既に登録済みの方
   </div>
  </div>
   <div class="row">
    <div class ="ml-5 mt-3">
     <%=link_to'こちら',  new_customer_session_path %> からログインしてください</div>
</div></div>



<%#= render "customers/shared/links" %>

<%#= link_to "back", "/" %>
