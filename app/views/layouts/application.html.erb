<!DOCTYPE html>
<html>
  <head>
    <title>NaganoCake</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>




    <% if admin_signed_in? %>

        <%= link_to "LOGO", root_path %>


        <%= link_to "商品一覧", admin_items_path %>
        <%= link_to "会員一覧", admin_customers_index_path %>
        <%= link_to "注文履歴一覧", admin_homes_top_path %>
        <%= link_to "ジャンル一覧", admin_genres_path %>
        <%= link_to "ログアウト", destroy_admin_session_path, method: :delete %>

    <%# else %>

    <% end %>

    <% if customer_signed_in? %>
      <li>
        <%= link_to "LOGO", root_path %>
        <%= link_to "マイページ", customers_my_page_path %>
        <%= link_to "商品一覧", items_path %>
        <%= link_to "カート", cart_items_path %>
        <%= link_to "ログアウト", destroy_customer_session_path, method: :delete %>
        ようこそ！<%= current_customer.last_name %>様
      </li>
    <% else %>
      <%= link_to "LOGO", root_path %>
      <%= link_to "About", about_path %>
      <%= link_to "新規登録", new_customer_registration_path %>
      <%= link_to "ログイン", new_customer_session_path %>
    <% end %>



<%= yield %>
  </body>
</html>
