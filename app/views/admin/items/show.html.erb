
<div class="container">
  <div class="row">
   <h5><div class = "bg-light mt-4 col-12 md-6">
    商品詳細</div></h5>
    </div>
    </div>
<div class="container">
 <div class="row">
  <div class="mt-3 col-4">
 <%= attachment_image_tag @item, :image, :fill, 300, 300, format: 'jpeg', fallback: "no_image.jpg" %>
</div>
<div class="col-8">
<div class="mt-5 col-12  mx-6">
 <div class ="row">
    <label for="id" class="col-sm-2 mb-4 text-left">商品名</label>
    <div class="col-sm-10 text-left">
     <%= @item.name %>
     </div>
  </div>

  <div class ="row">
    <label for="id" class="col-sm-2 mb-4 text-left">商品説明</label>
    <div class="col-sm-10">
     <%= @item.introduction %>
     </div>
  </div>

  <div class ="row">
    <label for="id" class="col-sm-2 mb-4 text-left">ジャンル</label>
    <div class="col-sm-10">
    <%= @item.genre.name %>
     </div>
  </div>

<div class ="row">
    <label for="id" class="col-sm-2 mb-4 text-left">税込価格(税抜価格)</label>
    <div class="col-sm-10">
     <strong> <%= @item.with_tax_price.to_s(:delimited) %>(<%= @item.price.to_s(:delimited) %>)円</strong>
     </div>
  </div>


<div class ="row">
    <label for="id" class="col-sm- mb-4 text-left">販売ステータス</label>
    <div class="col-sm-10 text-left">
     <strong> <%= @item.is_active_i18n %></strong>
     </div>
  </div>


</div>
<center class="mt-3">
<%= link_to "編集する", edit_admin_item_path(@item.id), class: "btn btn-success" %></center>


</div>
</div>