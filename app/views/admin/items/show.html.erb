<h3>商品詳細</h3>



<div>

 <h4>画像</h4>
  <%= attachment_image_tag @item, :image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg" %>
  <h4>商品名</h4>
  <%= @item.name %>
  <h4>商品説明文</h4>
  <%= @item.introduction %>
  <h4>ジャンル</h4>
  <%= @item.genre.name %>

  <h4>価格</h4>
  <%= @item.price %>

  <p>投稿日時：<%= @item.created_at.strftime('%Y/%m/%d') %></p>




</div>

<%= link_to "Edit", edit_admin_item_path(@item.id) %>


<%= link_to "Back", admin_items_path %>