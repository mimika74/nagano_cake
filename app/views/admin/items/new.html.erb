
<div class="container">
  <div class="row">
  <div class="mx-5 col-sm-6 col-md-6 col-lg-5 px-1 px-sm-1">

   <h5><div class = "bg-light mt-3 col-5 md-2">
    商品新規登録</div></h5>
<center>
  <%= form_with model: @item, url: admin_items_path, local:true do |f| %>
  
  <div class ="form-group row">
    <label for="image" class="col-sm-2 col-form-label">画像</label>
    <div class="col-sm-10">
      <%= f.attachment_field :image %></div>
  </div>
  
   <div class ="form-group row">
    <label for="image" class="col-sm-2 col-form-label">画像</label>
    <div class="col-sm-10">
        <%= f.text_field :name %></div>
    </div>
  <h8><p>画像</h8>
  <%= f.attachment_field :image %></p>
  <h8><p>商品名</h8>
  <%= f.text_field :name %></p>
  <h8><p>商品説明文</h8>
  <%= f.text_area :introduction %></p>
  <h8><p>ジャンル</h8>
  <%= f.select :genre_id, Genre.all.map{|o| [o.name, o.id]} %></p>
  <h8><p>価格</h8>
  <%= f.text_field :price %></p>
  <%= f.submit '投稿' %>
  
  
  
 <% end %>
</center>

</div>
</div>
</div>


