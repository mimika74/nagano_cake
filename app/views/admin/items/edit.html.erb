<h2>商品編集画面</h2>

  <%= form_with model: @item, url: admin_item_path(@item.id), local:true do |f| %>
    <div> <label for ="inputName">商品名</label>
    <%= f.text_field :name, autofocus:true, id:"inputName",placeholder:"Name" %></div>

    <div><%= attachment_image_tag @item, :image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg"%>
    <p><label for="inputImage">Image</label>
    <%= f.attachment_field :image, placeholder: "ファイルを選択" %></div></p>
    <div>商品紹介</div>
    <div> <%= f.text_area :introduction, autofocus:true, id:"inputIntroduction", placeholder:"Introduction" %></div>
    <h4>ジャンル</h4>
    <%= f.select :genre_id, Genre.all.map{|o| [o.name, o.id]} %>

    <h4>価格</h4>
    <%= f.text_field :price, autofocus:true, id:"inputPrice", placeholder:"Price" %>

    <p>投稿日時：<%= @item.created_at.strftime('%Y/%m/%d') %></p>
    <p>更新日時：<%= @item.updated_at.strftime('%Y/%m/%d') %></p>


    <div> <%= f.submit "Update Item" %></div>

  <% end %>


