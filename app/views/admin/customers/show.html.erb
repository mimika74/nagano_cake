<div class="container">
  <div class="row">
     <div class="mx-5 col-sm-6 col-md-6 col-lg-5 px-1 px-sm-1">

   <h5><p class = "bg-light mt-3 col-7 md-5"><%= @customer.last_name %><%= @customer.first_name %>さんの会員詳細</p></h5>


<div class="row">
  <label for="id" class="col-sm-4 col-form-label">会員ID</label>
    <div class="col-sm-6">
        <%= @customer.id %>
    </div>
</div>

<div class="row">
  <label for="id" class="col-sm-4 col-form-label">氏名</label>
    <div class="col-sm-6">
        <%= @customer.last_name %><%= @customer.first_name %>
    </div>
</div>

<div class="row">
  <label for="id" class="col-sm-4 col-form-label">フリガナ</label>
    <div class="col-sm-6">
        <%= @customer.last_name_kana %><%= @customer.first_name_kana %>
    </div>
</div>


<div class="row">
  <label for="id" class="col-sm-4 col-form-label">郵便番号</label>
    <div class="col-sm-6">
        <%= @customer.postal_code %>
    </div>
</div>

<div class="row">
  <label for="id" class="col-sm-4 col-form-label">住所</label>
    <div class="col-sm-6">
        <%= @customer.address %>
    </div>
</div>

<div class="row">
  <label for="id" class="col-sm-4 col-form-label">電話番号</label>
    <div class="col-sm-6">
        <%= @customer.telephone_number %>
    </div>
</div>

<div class="row">
  <label for="id" class="col-sm-4 col-form-label">メールアドレス</label>
    <div class="col-sm-6">
        <%= @customer.email %>
    </div>
</div>

<div class="row">
  <label for="id" class="col-sm-4 col-form-label">会員ステータス</label>
    <div class="col-sm-6">
      <%= @customer.is_deleted_i18n %>
    </div>
</div>


<div class="row">
  <label for="id" class="col-sm-4 col-form-label"></label>
    <div class="col-sm-8">
      <div class="row mx-md-7">
      <div class="col-5 py-3 md-8">
        <%= link_to "編集する", admin_customers_edit_path(@customer.id), class: "btn btn-success" %></div>
        <div class="col-8 py-3 md-8">
         <%= link_to "注文履歴一覧を見る", admin_customers_index_path, class: "btn btn-primary" %></div>
      </div>

    </div>
</div>


      </div>
    </div>
  </div>



