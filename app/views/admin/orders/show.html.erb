

<div class="container">
  <div class="row">
   <h5><div class = "bg-light mt-4 col-12 md-6">
   注文履歴詳細</div></h5>
  </div>
 </div>

<div class="col-8">
<div class="mt-5 col-12  mx-6">
 <div class ="row">
    <label for="id" class="col-sm-2 mb-4 text-left">購入者</label>
    <div class="col-sm-10 text-left">
     <%= @order.name %>
     </div>
  </div>
  <div class ="row">
    <label for="id" class="col-sm-2 mb-4 text-left">注文日</label>
    <div class="col-sm-10">
     <%= l @order.created_at %>
     </div>
  </div>


<div class ="row">
    <label for="id" class="col-sm-2 mb-4 text-left">配送先</label>
    <div class="col-sm-10">
    〒<%= @order.postal_code %><%= @order.address %><%= @order.name %>
     </div>
  </div>
  <div class ="row">
    <label for="id" class="col-sm-2 mb-4 text-left">支払方法</label>
    <div class="col-sm-10">
     <%= @order.payment_method_i18n %>
     </div>
  </div>
<div class ="row">
    <label for="id" class="col-sm-2 mb-3 text-left">注文ステータス</label>
    <div class="col-sm-10">
        <%= form_with model: @order, url:admin_orders_update_path(@order.id), method: :patch do |f| %>
  <%#= f.select :status, Order.statuses_i18n, [["waiting","0"],["paid_up","1"],["making","2"],["preparing","3"],["shipped","4"]] %>
          <%= f.select :status, Order.statuses_i18n.keys.map {|k| [I18n.t("enums.order.status.#{k}"), k]} %>
          <%= f.submit "更新", class: 'btn btn-success' %>
        <% end %>
     </div>
  </div>


<div class="container">
    <div class="row">

<table class="table col-md-9 mt-4">
      <thead class="thead-light">
        
        <th>商品名</th>
        <th>単価(税込)</th>
        <th>数量</th>
        <th>小計</th>
        <th>製作ステータス</th>
      </thead>

    <tbody>
    <% @order_details.each do |order_detail| %>
        <tr>
          <td><%= order_detail.item.name %></td>
          <td><%= order_detail.item.with_tax_price %></td>
          <td><%= order_detail.amount %></td>
          <td><%= order_detail.price * order_detail.amount %></td>
          <td><%= order_detail.making_status_i18n %>
          <%#= form_with model: order_detail, url:admin_order_details_update(order_detail.id), method: :patch do |f| %>

          <%#= f.select :making_status, OrderDetail.making_statuses_i18n.keys.map {|k| [I18n.t("enums.order.status.#{k}"), k]} %>
          <%#= f.submit "更新", class: 'btn btn-success' %>
          <%# end %>

          </td>
        </tr>
    <% end %>
    </tbody>
</table>

<div class="col-3">
<p align ="right"><strong>商品合計</strong><%= @total = (@order.total_payment - @order.shipping_cost).to_s %>円</p>

<p align ="right"><strong>送料</strong><%= @order.shipping_cost %>円</p>
<strong>
<p align ="right">請求金額合計<%= @order.total_payment.to_s %>円</p></strong>
</div>
</div>
</div>


 <%#= f.select :status, Order.statuses_i18n, [["waiting","0"],["paid_up","1"],["making","2"],["preparing","3"],["shipped","4"]] %>


