
<div class="container">
  <div class="row">
  <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0">

   <h5><p class = "bg-light mt-3">

注文履歴詳細
</p></h5>
  </div>
 </div>
 </div>

<table>
 <tr><th>購入者</th><td><%= @order.name %></td></tr>
 <tr><th>注文日</th><td><%= l @order.created_at %></td></tr>
 <tr><th>支払方法</th><td><%= @order.payment_method_i18n %></td></tr>
 <tr><th>配送先</th><td>〒<%= @order.postal_code %><%= @order.address %><%= @order.name %></td></tr>
 <tr><th>注文ステータス<%= @order.status_i18n %>
 <%= form_with model: @order, url:admin_orders_update_path(@order.id), method: :patch do |f| %>
  <%#= f.select :status, Order.statuses_i18n, [["waiting","0"],["paid_up","1"],["making","2"],["preparing","3"],["shipped","4"]] %>
  <%= f.select :status, Order.statuses_i18n.keys.map {|k| [I18n.t("enums.order.status.#{k}"), k]} %>
  <%= f.submit "変更", class: 'btn btn-success' %>
  <% end %>


 </td></tr>
</table>


<div class="card" style="width: 60rem;">

     <ul class="list-group list-group-flush">
     <table>
      <thead>
        <th>商品名</th>
        <th>単価(税込)</th>
        <th>数量</th>
        <th>小計</th>
        <th>製作ステータス</th>
      </thead>
     </ul>
</div>
    <tbody>
    <% @order_details.each do |order_detail| %>
        <tr>
          <td><%= order_detail.item.name %></td>
          <td><%= order_detail.item.with_tax_price %></td>
          <td><%= order_detail.amount %></td>
          <td><%= order_detail.price * order_detail.amount %></td>
          <td><%= order_detail.making_status_i18n %></td>
        </tr>
    <% end %>
    </tbody>
</table>

<p align ="right">商品合計:<%= @total = (@order.total_payment - @order.shipping_cost).to_s %></p>

<p align ="right">送料:<%= @order.shipping_cost %></p>

<p align ="right">請求金額合計:<%= @order.total_payment.to_s %>円</p>


<%= link_to "Back", admin_homes_top_path %>




