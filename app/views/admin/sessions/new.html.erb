<div class="container">
  <div class="row">


<h4><div class ="pt-3">管理者ログイン</div></h4>
</div>
<div vlass="container">
  <%= form_with model:  @admin, url: admin_session_path, local: true do |f| %>


  <div class="row mt-5">
  <div class="col-2">
    <%= f.label :メールアドレス %></div>
    <div class="col-3">
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %></div>
  </div>
  </div>

<div class="row mt-1">
  <div class="col-2">
    <%= f.label :パスワード %></div>
    <div class="col-3">
    <%= f.password_field :password, autocomplete: "current-password" %></div>
  </div>

  <div class="mt-3">
    <%= f.submit "ログイン", class: "btn btn-primary" %>
  </div>
  </div>


  <% end %>
</div>

 </div>
 </div>
 </div>
