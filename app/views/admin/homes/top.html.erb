<center>
<div class="card" style="width: 60rem;">
     <ul class="list-group list-group-flush">
     <table>
      <thead>
        <th>購入日時</th>
        <th>購入者</th>
        <th>注文個数</th>
        <th>注文ステータス</th>
      </thead>
     </ul>
</div>
    <tbody>

    <% @orders.each do |order| %>
        <tr>
            <td><%= link_to order.created_at, admin_orders_show_path(order.id) %></td>
          <%#= order.created_at %>
          <td><%= order.name %></td>
          <% order.order_details.each do |order_detail| %>
              <td><%= order_detail.amount %></td>
           <% end %>

          <td><%= order.status %></td>


        </tr>
    <% end %>
    </tbody>
</table>

