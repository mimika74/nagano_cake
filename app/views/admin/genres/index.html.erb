

<div class="container">
  <div class="row">
  <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0">

   <h5>
   <p class = "bg-light mt-3">
    ジャンル一覧・追加
    </p>
    </h5>


   <%= form_with model: @genre, url: admin_genres_path, local:true do |f| %>
    <h6><div class ="pl-3 ">ジャンル名<%= f.text_field :name %>

    <%= f.submit '新規登録', class: "btn btn-success" %> </div></h6>

   <% end %>

<table class="table table-hover table-inverse">
  <thead>
    <tr>
     <th>ジャンル</th>
     <th></th>
     <th colspan="2"></th>
    </tr>
  </thead>
  <tbody>

    <% @genres.each do |genre| %>
      <tr>
      <p>
     <td><%= genre.name %></td>
      <td><%= link_to "編集する", edit_admin_genre_path(genre.id), class: "btn btn-success" %></td>
      </p>
      </tr>
    <% end %>

  </tbody>
</table>





